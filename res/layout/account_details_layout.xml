<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <!--info header-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/header"
        android:text="Infos" />

    <View style="@style/Divider" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:columnCount="2">

        <!--pseudo-->
        <TextView
            style="@style/details_label"
            android:text="Pseudo" />

        <TextView
            android:id="@+id/details_pseudo"
            style="@style/details_value"
            android:inputType="text|textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textIsSelectable="true"
            android:text="sdlfkjsj" />

        <!--email-->
        <TextView
            style="@style/details_label"
            android:text="Email" />

        <TextView
            android:id="@+id/details_email"
            style="@style/details_value"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textIsSelectable="true"
            android:inputType="text|textEmailAddress"
            android:text="sdlfkjsj" />

        <!--password-->
        <TextView
            style="@style/details_label"
            android:text="Password" />

        <TextView
            style="@style/details_font"
            android:id="@+id/details_password"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textIsSelectable="true"
            android:inputType="text|textVisiblePassword" />

        <!--show password-->
        <CheckBox
            style="@style/details_font"
            android:id="@+id/details_show_password"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:text="show password"

            />

    </GridLayout>

    <!--notes header-->
    <TextView
        style="@style/header"
        android:text="Notes" />
    <!--style="?android:attr/listSeparatorTextViewStyle"-->
    <View style="@style/Divider" />

    <!--notes field-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/details_font"
            android:layout_marginTop="6dp"
            android:textIsSelectable="true"
            android:padding="5dp"
            android:minHeight="70dp"
            android:cursorVisible="false" />

    </LinearLayout>
</LinearLayout>